@using EShopping.Models
@model IEnumerable<Product>
<div class="content_top">
    <div class="heading">
        <h3>New Products</h3>
    </div>
    <div class="see">
        <p><a href="#">See all Products</a></p>
    </div>
    <div class="clear"></div>
</div>

<div class="section group">
@foreach (var item in Model)
{
    <div class="grid_1_of_4 images_1_of_4">
        <img src="~/UploadImg/Products/@item.ProductImg" width="50" height="50" />
        <h2>@Html.DisplayFor(modelItem => item.ProductName)</h2>
        <div class="price-details">
            <div class="price-number">
                <p><span class="rupees">$@Html.DisplayFor(modelItem => item.ProductPrice)</span></p>
            </div>
            <div class="add-cart">
                @* H4 Nút thêm *@
                <h4><a href="@Url.Action("ThemGioHang", "ShoppingCart", new { @ProduceCode = item.ProduceCode, @strUrl = Request.Url.ToString()})">Add to Cart</a></h4>
            </div>
            <div class="clear"></div>
        </div>
    </div>
}
</div>

