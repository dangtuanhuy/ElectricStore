@model EShopping.Models.Product

@{
    ViewBag.Title = "EditImg";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditImg</h2>


@using (Html.BeginForm("EditImg", "Products", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductId)

        <div class="form-group">
            @Html.HiddenFor(model => model.ProduceCode)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductName)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductDetails)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductUpdate)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductQty)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductSold)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.SupplierId)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.CategoryId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductImg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p><img src="~/UploadImg/Products/" class="img-responsive config_Product" alt="" /></p>
                <input type="file" id="Avatar" name="upload" />
                @Html.ValidationMessageFor(model => model.ProductImg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ColorId)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.SizeId)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ProductPrice)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
