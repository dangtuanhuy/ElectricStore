@model EShopping.Models.News

@{
    ViewBag.Title = "EditImg";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">EditImg</h2>


@using (Html.BeginForm("EditImg", "News", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NewsId)

        <div class="form-group">
           @Html.HiddenFor(model => model.NewTitles)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.NewsDetails)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.NewsBy)
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.NewsImgs, htmlAttributes: new { @class = "control-label col-md-2", @id = "Avatar" })
        <div class="col-md-10">
            <p><img src="~/UploadImg/News/@Model.NewsImgs" class="img-responsive" alt="" /></p>
            <input type="file" id="Avatar" name="upload" />
            @Html.ValidationMessageFor(model => model.NewsImgs, "", new { @class = "text-danger" })
        </div>
        </div>

        <div class="form-group">
          @Html.HiddenFor(model => model.NewUpdate)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
